cat > .gitignore <<EOF

# --- Build artifacts ---
*.o
*.obj
*.out
*.exe
*.a
*.so
*.dll
*.lib
*.dSYM/
*.stackdump

# --- Build directories ---
/build/
/bin/
/Debug/
/Release/
/CMakeFiles/
/cmake-build-*/

# --- IDE / Editor specific ---
.vscode/
.idea/
.vs/
*.code-workspace

# --- Visual Studio project files ---
*.sln
*.vcxproj
*.vcxproj.filters
*.vcxproj.user
*.VC.db
*.opendb

# --- System files ---
.DS_Store
Thumbs.db

# --- Logs / Temporary files ---
*.log
*.tmp
*.swp
*.swo
*.bak

# --- Testing ---
*.gcda
*.gcno
*.gcov

# --- Misc ---
*.class
*.pyc
*.pyo
*.db
.env
EOF
